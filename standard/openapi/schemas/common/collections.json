{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Collections Schema",
    "description": "This schema defines the metadata resource returned from /collections.",
    "type": "object",
    "required": [
        "links",
        "collections"
    ],
    "properties": {
        "links": {
            "type": "array",
            "items": {"$ref": "link.json"}
        },
        "collections": {
            "type": "array",
            "items": {"$ref": "collectionInfo.json"}
        }
    }
}